---
import PaymentHistory from "../../components/payment/PaymentHistory.astro"
import Layout from "../../layouts/Layout.astro"
---

<style is:inline>
	th {
		border: 1px solid #dfdfdf;
		padding: 1rem;
	}
	tbody {
		border: 1px solid #dfdfdf;
	}
	td {
		padding: 1.5rem;
	}
</style>
<Layout title="Privacy Policy | Siruk Lain">
	<section
		class="relative md:py-24 py-16 bg-gray-50 dark:bg-slate-800 text-white"
		id="home"
	>
		<PaymentHistory is:raw />
		<!-- style="min-height: 100svh;" -->
		<div class="absolute inset-0 bg-black opacity-80"></div>

		<div class="container mx-auto">
			<h3 class="text-2xl">
				<!-- OTP Authorization is reuired to display your payment histories -->
			</h3>
			<table style="width: 100%; margin-top: 3rem;">
				<thead>
					<tr>
						<th>Date</th>
						<th>Amount</th>
						<th>Init date</th>
						<th>Validity</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td colspan="4">
							OTP authorization is required, to show your payment histories
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</section>
</Layout>
